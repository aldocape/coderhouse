{
  "name": "proyecto-ecommerce-con-balanceador-de-carga",
  "version": "1.0.0",
  "description": "Se agregan funcionalidades de fork y cluster, y configuraciones de Nginx",
  "main": "index.js",
  "scripts": {
    "start": "node dist/index.js --mode=cluster",
    "build": "tsc",
    "watch": "tsc -w",
    "dev": "nodemon",
    "test": "echo \"Error: no test specified\" && exit 1",
    "prod": "npm run build && forever start dist/index.js --port=8080 --mode=cluster",
    "foreverstop:all": "forever stopall",
    "prod:fork": "npm run build && pm2 start dist/index.js --watch --name=EjemploPm2Fork",
    "prod:cluster": "npm run build && pm2 start dist/index.js --watch -i max --name=EjemploPm2Cluster",
    "pm2ecosystem": "pm2 start ecosystem.config.js",
    "pm2stop:all": "pm2 stop all",
    "pm2delete:all": "pm2 delete all"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/connect-flash": "^0.0.37",
    "@types/cookie-parser": "^1.4.3",
    "@types/express": "^4.17.15",
    "@types/express-session": "^1.17.5",
    "@types/passport": "^1.0.11",
    "@types/passport-local": "^1.0.34",
    "@types/yargs": "^17.0.17",
    "nodemon": "^2.0.20",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.4"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "connect-flash": "^0.1.1",
    "connect-mongo": "^4.6.0",
    "cookie-parser": "^1.4.6",
    "dotenv": "^16.0.3",
    "ejs": "^3.1.8",
    "express": "^4.18.2",
    "express-session": "^1.17.3",
    "moment": "^2.29.4",
    "mongoose": "^6.8.1",
    "normalizr": "^3.6.2",
    "passport": "^0.6.0",
    "passport-local": "^1.0.0",
    "socket.io": "^4.5.4",
    "yargs": "^17.6.2"
  }
}
